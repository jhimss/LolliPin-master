<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.github.orangegangsters.lollipin.lib.managers.ReceiveActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/eth"
        android:textSize="@dimen/width_17" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:text="@string/eth_add"
        android:textSize="@dimen/width_16"
        tools:ignore="RelativeOverlap" />

    <com.github.omadahealth.typefaceview.TypefaceEditText
        android:id="@+id/push_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="@dimen/width_10"
        android:layout_marginLeft="@dimen/width_30"
        android:layout_marginRight="@dimen/width_10"
        android:layout_marginStart="@dimen/width_30"
        android:layout_toLeftOf="@+id/copy"
        android:background="@drawable/rounded_boarder"
        android:focusableInTouchMode="false"
        android:padding="8dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/push_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/push_button"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/copyicon" />

    <ImageView
        android:id="@+id/scan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/qr_code" />

    <com.github.omadahealth.typefaceview.TypefaceTextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Tap to scan" />


</RelativeLayout>
